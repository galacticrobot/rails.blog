<div class="post-content">
    <small><em>This is the "Posts SHOW" template</em></small>

    <h1 class="title"><%= @post.title %></h1>
    <p class="date">
        submitted: <%= time_ago_in_words(@post.created_at) %> ago.
        | <%= link_to 'Edit', edit_post_path(@post), class: "edit-link" %>
        | <%= link_to 'Delete', post_path(@post), class: "delete-link", method: :delete, data: { confirm: 'are you sure you want to delete this post?'} %>
    </p>
    <p class="body">
        <%= @post.body %>
    </p>
</div>