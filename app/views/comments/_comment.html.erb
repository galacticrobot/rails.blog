<div class="comment clearfix">
    <div class="comment-content">
        <p class="comment-name"><strong><%= comment.name %></strong></p>
        <p class="comment-body"><%= comment.body %></p>
        <p class="comment-time"><%= time_ago_in_words(comment.created_at) %> Ago</p>
    </div>

    <p>
        <% if user_signed_in? %>
            <%= link_to 'Delete Comment', [comment.post, comment], class: 'button', method: :delete,  data: {confirm: 'Are you sure?'} %>
        <% end %>
    </p>
</div>
